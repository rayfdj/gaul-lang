{
  "name": "gaul-lang",
  "displayName": "Gaul Language",
  "description": "Language support for Gaul (.gaul files)",
  "version": "0.1.0",
  "publisher": "gaul",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:gaul"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gaul",
        "aliases": [
          "Gaul",
          "gaul"
        ],
        "extensions": [
          ".gaul"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "configuration": {
      "title": "Gaul",
      "properties": {
        "gaul.lsp.path": {
          "type": "string",
          "default": "",
          "description": "Path to the gaul-lsp binary. Leave empty to auto-detect from cargo build output or PATH."
        },
        "gaul.inlayHints.parameterNames.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show parameter name hints at function call sites."
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "gaul",
    "programming language",
    "spaces in identifiers",
    "custom keywords",
    "lsp",
    "rename",
    "inlay hints"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
